<section class="shoppinglist-show">
  <h1 class="add-food-title">Shopping List</h1>
    <% if @shoppinglist.empty? %>
    <p> List is empty </p>
    <% else @shoppinglist.empty? %>
    <div class="shoppinglist-headline">
      <p>
        Ammout of food to buy: <%= @shoppinglist.count %>
      </p>
      <p>
        Total value of food needed: <%= number_to_currency(@shoppinglist.sum { |item| item[:price]}) %>
      </p>
  </div>
  <div class="shoppinglist-table">
      <Table border="1" class="table-container">
        <thead>
          <tr class="table-header">
            <th class="table-cell">Food</th>
            <th class="table-cell">Quantity</th>
            <th class="table-cell">Price</th>
          </tr>
        </thead>
        <tbody>
          <% @shoppinglist.each do |recipefood| %>
            <tr>
              <td class="table-cell"><%= link_to recipefood[:food].name, food_path(recipefood[:food]) %></td>
              <td class="table-cell"><%= "#{recipefood[:quantity]} #{recipefood[:food].measurement_unit}" %></td>
              <td class="table-cell"><%= number_to_currency(recipefood[:price]) %></td>
            </tr>
          <% end %>
        </tbody>
      </Table>
    </div>
      <%= link_to '<< Back to Recipes', recipes_path, class: 'new-link new_link2'%>
    <% end %>
</section>