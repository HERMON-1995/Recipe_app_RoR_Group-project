<h2 class="add-food-title">Add a new Recipe</h2>

<%= form_with(model: @recipe, url: recipes_path, method: :post) do |f| %>

  <div class="new-form">
    <div class="single-form-field">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, placeholder: "Recipe name", required: true %>
    </div>

    <div class="single-form-field">
      <%= f.label :preparation_time %>
      <%= f.text_field :preparation_time, autofocus: true, placeholder: "30 min", required: true%>
    </div>

    <div class="single-form-field">
      <%= f.label :cooking_time %>
      <%= f.text_field :cooking_time, placeholder: "30 min", required: true, autofocus: true%>
    </div>

    <div class="single-form-field">
      <%= f.label :description %>
      <%= f.text_area :description, autocomplete: "quantity", placeholder: "Recipe steps...", rows: 5,required: true, autofocus: true%>
    </div>

    <div class="single-form-field">
      <%= f.label :public, 'Public' %>
      <%= f.radio_button :public, true%>
      <%= f.label :private, 'Private' %>
      <%= f.radio_button :public, false%>
    </div>

    <div class="actions">
      <%= f.submit "Create Recipe" %>
    </div>
  </div>
<% end %>
