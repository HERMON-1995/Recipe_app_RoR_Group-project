<%= render 'shared/navigation' %>
<section class='recipes'>
    <h1 class='recipes-title'>Here is the recipe list</h1>
    <div class="add-food">
        <%= link_to "Create Recipe", new_recipe_path , class: "add-food-link" %>
    </div> 

    <% @recipes.each do |recipe| %>
        
    <div class='recipe-card'>
        <%= link_to recipe_path(id: recipe.id) do%>
            <%= render partial:'shared/recipe_card', locals: {recipe: recipe} %> 
        <% end %>

        <%= render partial: 'shared/delete_btn', locals: {model: recipe, url_path: recipe_path(id: recipe.id)}%>
    </div>
    <% end %>
</section>
